<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/tab_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"
        android:textColor="@color/Black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tab_item_indicator"
        android:layout_width="16dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#3975f6"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tab_item_text"
        app:layout_constraintStart_toStartOf="@+id/tab_item_text"
        app:layout_constraintTop_toBottomOf="@+id/tab_item_text" />

    <View
        android:id="@+id/gold_red_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-3dp"
        android:background="@drawable/all_future_mine_icon_ring"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/tab_item_text"
        app:layout_constraintTop_toTopOf="@+id/tab_item_text" />
</androidx.constraintlayout.widget.ConstraintLayout>