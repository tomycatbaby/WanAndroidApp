<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/fl_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_copy" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="复制链接"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/fl_copy"
        app:layout_constraintStart_toStartOf="@id/fl_copy"
        app:layout_constraintEnd_toEndOf="@+id/fl_copy"
        />

    <FrameLayout
        android:id="@+id/fl_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fl_copy"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_browser" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="浏览器打开"
        android:textColor="@color/color_666666"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/fl_browser"
        app:layout_constraintStart_toStartOf="@id/fl_browser"
        app:layout_constraintEnd_toEndOf="@+id/fl_browser"
        />
</androidx.constraintlayout.widget.ConstraintLayout>