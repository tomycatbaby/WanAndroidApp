<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingLayout">
        <attr name="emptyView" format="reference"/>
        <attr name="errorView" format="reference"/>
        <attr name="loadingView" format="reference"/>
        <attr name="contentView" format="reference"/>
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />
        <attr name="progWidth" format="dimension" />
        <attr name="backColor" format="color" />
        <attr name="progColor" format="color" />
        <attr name="progStartColor" format="color" />
        <attr name="progFirstColor" format="color" />
        <attr name="progress" format="integer" />

    </declare-styleable>
    
    <declare-styleable name="TopLayout">
        <attr name="tl_left_image" format="reference"/>
        <attr name="tl_right_image" format="reference"/>
        <attr name="tl_title" format="string"/>
    </declare-styleable>
</resources>